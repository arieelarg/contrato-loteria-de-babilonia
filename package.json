        "chai": "^4.3.6",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.6.9",
        "hardhat": "^2.10.1",
        "hardhat-contract-sizer": "^2.6.1",
        "hardhat-deploy": "^0.11.12",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "prettier-plugin-solidity": "^1.0.0-dev.23",
